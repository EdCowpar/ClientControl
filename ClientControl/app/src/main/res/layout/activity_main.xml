<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.edcowpar.clientcontrol.MainActivity">


    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/newClient"
        android:onClick="AddClient"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:src="@drawable/manwoman"
        android:scaleType="fitCenter"
        android:clickable="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Client"
        android:id="@+id/label1"
        android:textSize="20sp"
        android:layout_below="@+id/newClient"
        android:layout_alignLeft="@+id/newClient"
        android:layout_alignStart="@+id/newClient" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/modifyClient"
        android:onClick="SelectClient"
        android:src="@drawable/manwoman"
        android:scaleType="fitCenter"
        android:clickable="true"
        android:layout_alignTop="@+id/newClient"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modify Client"
        android:id="@+id/label2"
        android:layout_margin="10dp"
        android:layout_below="@+id/modifyClient"
        android:layout_alignLeft="@+id/modifyClient"
        android:textSize="20sp"
         />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
         android:id="@+id/btnReport"
        android:src="@drawable/reports1"
        android:scaleType="fitCenter"
        android:clickable="true"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/label1"
        android:layout_alignStart="@+id/label1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expiry Dates"
        android:id="@+id/label3"
        android:textSize="20sp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/label2"
        android:layout_alignStart="@+id/label2" />

</RelativeLayout>
