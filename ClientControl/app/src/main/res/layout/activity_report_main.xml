<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context="com.example.edcowpar.clientcontrol.ReportMainActivity">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/rep1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/addClient"
                    android:onClick="SelectReports"
                    android:src="@drawable/reports1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_below="@id/rep1"
                    android:layout_centerHorizontal="true"
                    android:text="Client Reports"
                    android:textSize="20sp" />

            </RelativeLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="500dp"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/rep2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="Audits"
                    android:onClick="SelectAudits"
                    android:src="@drawable/aud1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rep2"
                    android:layout_centerHorizontal="true"
                    android:text="Audit Reports"
                    android:textSize="20sp" />


            </RelativeLayout>

        </TableRow>


    </TableLayout>
</LinearLayout>
