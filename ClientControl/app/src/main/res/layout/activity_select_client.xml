<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.edcowpar.clientcontrol.SelectClientActivity">

    <TextView
        android:id="@+id/tvSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:text="@string/tvSearch" />

    <EditText
        android:id="@+id/etSearchText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tvSystemType"
        android:ems="8"
        android:inputType="number" />

    <Button
        android:id="@+id/btnGo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/etSearchText"
        android:layout_toRightOf="@+id/etSearchText"
        android:drawableRight="@android:drawable/ic_menu_search"
        android:text="Go" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etSearchText"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/tvSystemType">

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:checked="true"
            android:text="by ClientNo" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:checked="false"
            android:text="by Client Name" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:checked="false"
            android:text="by Expiry date" />


    </RadioGroup>


    <View
        android:id="@+id/input_layout_h1"
        android:layout_width="150dp"
        android:layout_height="2dp"
        android:layout_below="@+id/radioGroup"
        android:layout_margin="7dp"
        android:layout_toRightOf="@+id/tvSystemType"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/tvSystemType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/input_layout_h1"
        android:layout_marginTop="10dp"
        android:text="System Type" />

    <Spinner
        android:id="@+id/spSystemType"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_layout_h1"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/tvSystemType"
        android:entries="@array/system_types"
        android:prompt="@string/system_prompt" />

    <View
        android:id="@+id/input_layout_h2"
        android:layout_width="150dp"
        android:layout_height="2dp"
        android:layout_below="@+id/tvSystemType"
        android:layout_toRightOf="@+id/tvSystemType"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/tvConsultant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/input_layout_h2"
        android:layout_marginTop="10dp"
        android:text="@string/tvConsultant" />

    <Spinner
        android:id="@+id/spConsultant"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_layout_h2"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/tvSystemType"
        android:entries="@array/system_types"
        android:prompt="@string/tvConsultant" />

    <View
        android:id="@+id/input_layout_h3"
        android:layout_width="150dp"
        android:layout_height="2dp"
        android:layout_below="@+id/spConsultant"
        android:layout_toRightOf="@+id/tvSystemType"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/tvFromDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/input_layout_h3"
        android:layout_marginTop="12dp"
        android:text="@string/tvFromDate" />

    <EditText
        android:id="@+id/etFromDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_layout_h3"
        android:layout_toRightOf="@+id/tvSystemType"
        android:ems="8"
        android:focusable="false"
        android:inputType="none" />

    <TextView
        android:id="@+id/tvToDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvFromDate"
        android:layout_marginTop="12dp"
        android:text="@string/tvToDate" />

    <EditText
        android:id="@+id/etToDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etFromDate"
        android:layout_toRightOf="@+id/tvSystemType"
        android:ems="8"
        android:focusable="false"
        android:inputType="none" />

    <Button
        android:id="@+id/btnFromDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/etFromDate"
        android:layout_toRightOf="@+id/etSearchText"
        android:onClick="showDatePickerDialog"
        android:text="..." />

    <Button
        android:id="@+id/btnToDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/etToDate"
        android:layout_toRightOf="@+id/etSearchText"
        android:onClick="showDatePickerDialog"
        android:text="..." />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@android:drawable/ic_input_add" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_gravity="bottom|start"
        android:layout_margin="@dimen/fab_margin"
        android:src="@android:drawable/ic_media_previous" />


</RelativeLayout>
